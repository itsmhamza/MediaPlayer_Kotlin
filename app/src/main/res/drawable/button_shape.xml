<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- larger circle at the back -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/_15sdp"/>
            <stroke
                android:width="1dp"
                android:color="@color/bg_color" />
        </shape>
    </item>

    <!-- inner circle -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_color" />
            <corners android:radius="@dimen/_10sdp"/>
        </shape>
    </item>
</layer-list>