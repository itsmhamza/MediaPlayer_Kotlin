<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/_8sdp"
    android:background="@color/bg_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Do You Want To Close App?"
        android:textColor="@color/white"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt"
        android:id="@+id/framess">
        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shimmerlayouts"
            tools:ignore="MissingConstraints">
            <include layout="@layout/nativead_shimmer">
            </include>
        </com.facebook.shimmer.ShimmerFrameLayout>
        <FrameLayout
            android:id="@+id/framesss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/nativead"
            tools:ignore="MissingConstraints">
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exitbtn"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="Exit"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:paddingBottom="@dimen/_4sdp"
        android:background="@drawable/button_shape"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/framess"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/notnowbtn"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="Not Now"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:paddingBottom="@dimen/_4sdp"
        android:background="@drawable/button_shape"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@+id/exitbtn"
        app:layout_constraintTop_toBottomOf="@+id/framess"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ratebtn"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="Rate It "
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:paddingBottom="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/button_shape"
        app:layout_constraintStart_toEndOf="@+id/notnowbtn"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@+id/framess"/>
</androidx.constraintlayout.widget.ConstraintLayout>